<resources>

    <!--Botón primario-->
    <!--<style name="BaseButton.PrimaryButton">
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>-->

    <!--Botón secundario-->
    <style name="BaseButton.SecondaryButton">
        <item name="android:background">@drawable/btn_secondary</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
    </style>

    <!--Estilo de los CardViews-->
    <style name="CardViewStyle" parent="CardView.Dark">
        <item name="cardCornerRadius">@dimen/card_view_radius</item>
        <item name="cardElevation">@dimen/card_view_elevation</item>
        <item name="cardBackgroundColor">@color/card_background_dark</item>
    </style>

    <style name="BottomNavViewStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@drawable/background_nav_view_dark</item>
        <item name="itemIconTint">@color/item_navigation_bar_tint</item>
        <item name="itemTextColor">@color/item_navigation_bar_tint</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.MaterialComponents.TabLayout.PrimarySurface">
        <item name="tabTextAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="tabMode">auto</item>
        <item name="tabGravity">center</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabIndicatorColor">?android:attr/colorBackground</item>
        <item name="tabIndicatorGravity">center</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_fragments</item>
    </style>

    <style name="BubbleFloatingStyle">
        <item name="android:background">@drawable/background_green_borderless_card_dark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:popupBackground">?attr/colorPrimary</item>
    </style>

    <style name="TextReverseStyle">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>