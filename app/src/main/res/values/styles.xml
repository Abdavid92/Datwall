<resources>

    <!--Estilo base de los botones-->
    <style name="BaseButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <!--Botón primario-->
    <style name="BaseButton.PrimaryButton">
        <item name="android:background">@drawable/btn_primary_background</item>
        <item name="android:textColor">@color/btn_primary_text_color</item>
    </style>

    <!--Botón secundario-->
    <style name="BaseButton.SecondaryButton">
        <item name="android:background">@drawable/btn_secondary</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
    </style>

    <!--Botón de alerta-->
    <style name="BaseButton.DangerButton">
        <item name="android:background">@drawable/btn_danger</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

    <style name="ExtendedFabButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
        <item name="android:textAllCaps">false</item>
    </style>

    <!--Estilo de los CardViews-->
    <style name="CardViewStyle" parent="CardView.Light">
        <item name="cardCornerRadius">@dimen/card_view_radius</item>
        <item name="cardElevation">@dimen/card_view_elevation</item>
        <item name="cardBackgroundColor">@color/card_background_light</item>
    </style>

    <style name="BottomNavViewStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@drawable/background_nav_view_light</item>
        <item name="itemIconTint">@color/item_navigation_bar_tint</item>
        <item name="itemTextColor">@color/item_navigation_bar_tint</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="tabTextAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="tabMode">auto</item>
        <item name="tabGravity">center</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabIndicatorGravity">center</item>
        <item name="tabSelectedTextColor">@color/black</item>
    </style>

    <style name="BackgroundStyle">
        <item name="android:background">@drawable/background_fragments</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_fragments</item>
    </style>

    <style name="Widget.Theme.Datwall.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.Datwall.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="AboutItemStyle">
        <item name="drawableTint">?attr/colorControlNormal</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="BubbleFloatingStyle">
        <item name="android:background">@drawable/background_green_borderless_card_light</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MessageStyle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="android:popupBackground">?attr/colorPrimaryVariant</item>
    </style>

    <style name="TextReverseStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.Datwall.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.Datwall.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

</resources>