<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/purple_medium">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/wel_image"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:src="@drawable/presentation_page_0"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/Wel_TextContainer">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/wel_title"
            style="@style/WelcomeScreenText.Large.Centered"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Bienvenido a Mis Datos"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/wel_description"
            style="@style/WelcomeScreenText"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Su app de administraciÃ³n de datos"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>