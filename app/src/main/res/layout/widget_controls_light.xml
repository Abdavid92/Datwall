<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_widget_light"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/lin_firewall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="2dp"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp">

        <ImageView
            android:id="@+id/icon_firewall"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/firewall_off" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:text="@string/title_firewall"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:background="?android:attr/listDivider"
        android:orientation="horizontal" />


    <LinearLayout
        android:id="@+id/lin_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="2dp"
        android:paddingBottom="4dp"
        android:paddingRight="8dp">

        <ImageView
            android:id="@+id/icon_bubble"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/bubble_off" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_bubble_widget"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    </LinearLayout>

</LinearLayout>