<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.settings.PackagesConfigurationFragment">

    <data>
        <import type="com.smartsolutions.paquetes.annotations.Networks" />
        <variable
            name="automatic"
            type="Boolean" />
        <variable
            name="network"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_horizontal_margin">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/packages_configuration_summary"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/configuration_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/summary">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/automatic_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/automatic_mode"
                android:checked="@={automatic}" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/manual_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/manual_mode" />

        </RadioGroup>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/sim_network"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/configuration_mode"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:entries="@array/sim_networks"
            android:enabled="@{!automatic}" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_start_configuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{automatic ? @string/start_packages_configuration : @string/btn_save}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sim_network"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:enabled="@{(network == null || network == Networks.NETWORK_NONE) || !automatic}"
            tools:text="@string/start_packages_configuration" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/result_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btn_start_configuration"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            tools:text="Resultado de la operaciÃ³n" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>