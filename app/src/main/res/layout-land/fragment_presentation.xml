<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/purple_medium">

    <View
        android:id="@+id/wel_center_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignStart="@id/wel_center_view"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:gravity="center"
        style="@style/Wel_TextContainer">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/wel_title"
            style="@style/WelcomeScreenText.Large.Centered"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Bienvenido a Mis Datos"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/wel_description"
            style="@style/WelcomeScreenText"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Su app de administraciÃ³n de datos"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/wel_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/wel_center_view"
        android:layout_alignTop="@id/wel_center_view"
        android:layout_alignBottom="@id/wel_center_view"
        android:layout_alignParentStart="true"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="-9dp"
        tools:src="@drawable/presentation_page_0" />

</RelativeLayout>